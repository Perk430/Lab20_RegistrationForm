
@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Admin</h2>

<center>
    <table border="1">
        <tr><th>Item</th><th>Description</th><th>Quantity</th><th>Price</th><th>Edit</th><th>Delete</th></tr>
        @foreach (var element in ViewBag.ItemInfo)
        {
            <tr>
                <td>@element.ItemName</td>
                <td>@element.Description</td>
                <td>@element.Quantity</td>
                <td>@element.ItemPrice</td>
                <td><a href="UpdateItem?UpdateName=@element.ItemName">Edit</a></td>
                <td><a href="DeleteItem?DeleteName=@element.ItemName">Delete</a></td>
            </tr>
        }
    </table>
    <br />
    <br />
    <br />
    
</center>
<li><a href="/Home/AddItem">Add Item</a></li>

